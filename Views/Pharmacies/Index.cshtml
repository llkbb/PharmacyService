@model IEnumerable<PharmacyChain.Models.Pharmacy>

@{
    ViewData["Title"] = "Аптеки";
}

<h2>Аптеки</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Створити нову аптеку</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Адреса</th>
            <th>Телефон</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
