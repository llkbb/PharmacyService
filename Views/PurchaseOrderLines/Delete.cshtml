@model PharmacyChain.Models.PurchaseOrderLine

@{
    ViewData["Title"] = "Видалити позицію закупівлі";
}

<h2>Видалити позицію закупівлі</h2>

<div class="alert alert-danger">
    Ви дійсно хочете видалити цей товар із закупівлі?
</div>

<table class="table table-bordered">
    <tr>
        <th>ID Замовлення</th>
        <td>@Model.PurchaseOrderId</td>
    </tr>
    <tr>
        <th>Препарат</th>
        <td>@Model.Drug?.Name</td>
    </tr>
    <tr>
        <th>Кількість</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Ціна закупівлі</th>
        <td>@Model.UnitCost</td>
    </tr>
    <tr>
        <th>Сума</th>
        <td>@(Model.Quantity* Model.UnitCost)</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
