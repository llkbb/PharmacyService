@model PharmacyChain.Models.PurchaseOrderLine

@{
    ViewData["Title"] = "Видалити позицію закупівлі";
}

<h2>Видалити позицію закупівлі</h2>

<div class="alert alert-danger">
    Ви дійсно хочете видалити цю позицію?
</div>

<table class="table table-bordered">
    <tr>
        <th>Закупівля ID</th>
        <td>@Model.PurchaseOrderId</td>
    </tr>
    <tr>
        <th>Препарат</th>
        <td>@Model.Drug?.Name</td>
    </tr>
    <tr>
        <th>Кількість</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Вартість за ед.</th>
        <td>₴ @Model.UnitCost.ToString("F2")</td>
    </tr>
    <tr>
        <th>Сума</th>
        <td class="fw-bold">₴ @(Model.Quantity * Model.UnitCost).ToString("F2")</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
