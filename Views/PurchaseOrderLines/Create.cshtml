@model PharmacyChain.Models.PurchaseOrderLine

@{
    ViewData["Title"] = "Додати позицію закупівлі";
}

<h2>Додати позицію закупівлі</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Замовлення</label>
        <select asp-for="PurchaseOrderId" class="form-select" asp-items="ViewBag.Orders"></select>
        <span asp-validation-for="PurchaseOrderId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Препарат</label>
        <select asp-for="DrugId" class="form-select" asp-items="ViewBag.Drugs"></select>
        <span asp-validation-for="DrugId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Кількість</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ціна закупівлі</label>
        <input asp-for="UnitCost" class="form-control" />
        <span asp-validation-for="UnitCost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Створити</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>

</form>
