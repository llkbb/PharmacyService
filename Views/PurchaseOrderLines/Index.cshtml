@model IEnumerable<PharmacyChain.Models.PurchaseOrderLine>

@{
    ViewData["Title"] = "Позиції закупівлі";
}

<h2>Позиції закупівлі</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Додати позицію</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Закупівля ID</th>
            <th>Препарат</th>
            <th>Кількість</th>
            <th>Вартість за ед.</th>
            <th>Сума</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <a href="/PurchaseOrders/Details/@item.PurchaseOrderId">@item.PurchaseOrderId</a>
                </td>
                <td>@item.Drug?.Name</td>
                <td>@item.Quantity</td>
                <td>₴ @item.UnitCost.ToString("F2")</td>
                <td class="fw-bold">₴ @(item.Quantity * item.UnitCost).ToString("F2")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
