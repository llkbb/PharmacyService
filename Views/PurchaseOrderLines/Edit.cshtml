@model PharmacyChain.Models.PurchaseOrderLine

@{
    ViewData["Title"] = "Редагувати позицію закупівлі";
}

<h2>Редагувати позицію закупівлі</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="PurchaseOrderId" class="form-label">Закупівля</label>
        <select asp-for="PurchaseOrderId" class="form-select" asp-items="ViewBag.Orders"></select>
        <span asp-validation-for="PurchaseOrderId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DrugId" class="form-label">Препарат</label>
        <select asp-for="DrugId" class="form-select" asp-items="ViewBag.Drugs"></select>
        <span asp-validation-for="DrugId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Кількість</label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitCost" class="form-label">Вартість за одиницю (₴)</label>
        <input asp-for="UnitCost" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="UnitCost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
