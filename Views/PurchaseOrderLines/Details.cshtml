@model PharmacyChain.Models.PurchaseOrderLine

@{
    ViewData["Title"] = "Деталі позиції закупівлі";
}

<h2>Деталі позиції закупівлі</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Закупівля</th>
        <td>
            <a href="/PurchaseOrders/Details/@Model.PurchaseOrderId">Закупівля @Model.PurchaseOrderId</a>
        </td>
    </tr>
    <tr>
        <th>Препарат</th>
        <td>@Model.Drug?.Name</td>
    </tr>
    <tr>
        <th>Кількість</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Вартість за одиницю</th>
        <td>₴ @Model.UnitCost.ToString("F2")</td>
    </tr>
    <tr>
        <th>Загальна вартість</th>
        <td class="fw-bold">₴ @(Model.Quantity * Model.UnitCost).ToString("F2")</td>
    </tr>
</table>

<p class="mt-3">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>
    <a class="btn btn-secondary" asp-action="Index">Назад до списку</a>
</p>
