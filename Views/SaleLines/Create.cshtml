@model PharmacyChain.Models.SaleLine

@{
    ViewData["Title"] = "Додати позицію продажу";
}

<h2>Додати позицію продажу</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Продаж</label>
        <select asp-for="SaleId" class="form-select" asp-items="ViewBag.Sales"></select>
        <span asp-validation-for="SaleId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Препарат</label>
        <select asp-for="DrugId" class="form-select" asp-items="ViewBag.Drugs"></select>
        <span asp-validation-for="DrugId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Кількість</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ціна</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Створити</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>

</form>
