@model PharmacyChain.Models.Customer

@{
    ViewData["Title"] = "Редагувати клієнта";
}

<h2>Редагувати клієнта</h2>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label">ПІБ</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Телефон</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>

</form>
