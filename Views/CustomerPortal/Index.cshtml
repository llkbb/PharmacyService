@model IEnumerable<PharmacyChain.Models.Drug>

@{
    ViewData["Title"] = "Каталог препаратів";
}

<div class="container mt-4">
    <h2><i class="bi bi-shop"></i> Каталог препаратів</h2>

    <!-- Форма пошуку та фільтрації -->
    <form method="get" class="mb-4">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Пошук</label>
                <input type="text" name="search" class="form-control" placeholder="Назва або опис..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Категорія</label>
                <select name="category" class="form-select">
                    <option value="">Всі категорії</option>
                    @foreach (var cat in (List<string>)ViewBag.Categories)
                    {
                        <option value="@cat" selected="@(ViewBag.Category == cat)">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Тип</label>
                <select name="prescriptionRequired" class="form-select">
                    <option value="">Всі</option>
                    <option value="false" selected="@(ViewBag.PrescriptionRequired == false)">Безрецептурні</option>
                    <option value="true" selected="@(ViewBag.PrescriptionRequired == true)">Рецептурні</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Шукати</button>
            </div>
        </div>
    </form>

    @if (ViewBag.Search != null || ViewBag.Category != null || ViewBag.PrescriptionRequired != null)
    {
        <div class="mb-3">
            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">Скинути фільтри</a>
        </div>
    }

    <!-- Список препаратів -->
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Препарати не знайдені
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var drug in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                @drug.Name
                                @if (drug.PrescriptionRequired)
                                {
                                    <span class="badge bg-warning text-dark">Rx</span>
                                }
                            </h5>
                            <p class="text-muted small">@drug.Category</p>
                            <p class="card-text">@drug.Description</p>
                            <p class="text-muted small">Виробник: @drug.Manufacturer</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-success mb-0">@drug.Price.ToString("F2") грн</span>
                                <div>
                                    <a href="@Url.Action("DrugDetails", new { id = drug.Id })" class="btn btn-sm btn-outline-primary">
                                        Деталі
                                    </a>
                                    <a href="@Url.Action("Purchase", new { drugId = drug.Id })" class="btn btn-sm btn-success">
                                        Купити
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
