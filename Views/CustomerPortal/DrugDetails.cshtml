@model PharmacyChain.Models.Drug

@{
    ViewData["Title"] = Model.Name;
    var availability = (List<PharmacyChain.Models.InventoryItem>)ViewBag.Availability;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Каталог</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2>
                        @Model.Name
                        @if (Model.PrescriptionRequired)
                        {
                            <span class="badge bg-warning text-dark">Рецептурний</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Безрецептурний</span>
                        }
                    </h2>

                    <div class="mt-3">
                        <p><strong>Категорія:</strong> @Model.Category</p>
                        <p><strong>Виробник:</strong> @Model.Manufacturer</p>
                        <p><strong>Опис:</strong></p>
                        <p>@Model.Description</p>
                        <h3 class="text-success">Ціна: @Model.Price.ToString("F2") грн</h3>
                    </div>

                    @if (Model.PrescriptionRequired)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Увага!</strong> Для купівлі цього препарату потрібен дійсний рецепт від лікаря.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Наявність в аптеках</h5>
                </div>
                <div class="card-body">
                    @if (!availability.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i> Препарат відсутній в усіх аптеках
                        </div>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (var item in availability)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@item.Pharmacy.Name</strong>
                                            <br />
                                            <small class="text-muted">@item.Pharmacy.Address</small>
                                            <br />
                                            <span class="badge bg-info">В наявності: @item.Quantity шт.</span>
                                        </div>
                                        <a href="@Url.Action("Purchase", new { drugId = Model.Id, pharmacyId = item.PharmacyId })" 
                                           class="btn btn-sm btn-success">
                                            Купити
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            @if (availability.Any())
            {
                <div class="mt-3">
                    <a href="@Url.Action("Purchase", new { drugId = Model.Id })" class="btn btn-success w-100">
                        <i class="bi bi-cart-plus"></i> Купити зараз
                    </a>
                </div>
            }
        </div>
    </div>
</div>
