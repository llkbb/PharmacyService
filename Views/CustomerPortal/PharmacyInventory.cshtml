@model IEnumerable<PharmacyChain.Models.InventoryItem>

@{
    ViewData["Title"] = "Асортимент аптеки";
    var pharmacy = (PharmacyChain.Models.Pharmacy)ViewBag.Pharmacy;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Pharmacies")">Аптеки</a></li>
            <li class="breadcrumb-item active">@pharmacy.Name</li>
        </ol>
    </nav>

    <h2><i class="bi bi-hospital"></i> @pharmacy.Name</h2>
    <p class="text-muted">
        <i class="bi bi-geo-alt"></i> @pharmacy.Address | 
        <i class="bi bi-telephone"></i> @pharmacy.Phone
    </p>

    <h4 class="mt-4">Асортимент препаратів</h4>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> В цій аптеці наразі немає препаратів в наявності
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Препарат</th>
                        <th>Категорія</th>
                        <th>Наявність</th>
                        <th>Ціна</th>
                        <th>Тип</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Drug.Name</strong>
                                <br />
                                <small class="text-muted">@item.Drug.Manufacturer</small>
                            </td>
                            <td>@item.Drug.Category</td>
                            <td>
                                <span class="badge bg-success">@item.Quantity шт.</span>
                            </td>
                            <td class="text-success"><strong>@item.UnitPrice.ToString("F2") грн</strong></td>
                            <td>
                                @if (item.Drug.PrescriptionRequired)
                                {
                                    <span class="badge bg-warning text-dark">Rx</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">OTC</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("DrugDetails", new { id = item.DrugId })" 
                                   class="btn btn-sm btn-outline-primary">
                                    Деталі
                                </a>
                                <a href="@Url.Action("Purchase", new { drugId = item.DrugId, pharmacyId = pharmacy.Id })" 
                                   class="btn btn-sm btn-success">
                                    Купити
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Pharmacies")" class="btn btn-secondary">Повернутися до списку аптек</a>
    </div>
</div>
