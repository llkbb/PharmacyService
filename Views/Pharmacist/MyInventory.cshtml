@model IEnumerable<PharmacyChain.Models.InventoryItem>

@{
    ViewData["Title"] = "Мій склад";
    var pharmacies = (List<PharmacyChain.Models.Pharmacy>)ViewBag.Pharmacies;
    var selectedPharmacy = ViewBag.SelectedPharmacy as int?;
}

<div class="container mt-4">
    <h2><i class="bi bi-boxes"></i> Склад аптек</h2>

    <!-- Фільтр по аптеці -->
    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Вибрати аптеку:</label>
                <select name="pharmacyId" class="form-select" onchange="this.form.submit()">
                    <option value="">Всі аптеки</option>
                    @foreach (var pharmacy in pharmacies)
                    {
                        <option value="@pharmacy.Id" selected="@(selectedPharmacy == pharmacy.Id)">
                            @pharmacy.Name
                        </option>
                    }
                </select>
            </div>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Немає товарів на складі
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Аптека</th>
                        <th>Препарат</th>
                        <th>Категорія</th>
                        <th>Наявність</th>
                        <th>Ціна</th>
                        <th>Тип</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var isLowStock = item.Quantity <= item.Drug.ReorderLevel;
                        <tr class="@(isLowStock ? "table-warning" : "")">
                            <td><strong>@item.Pharmacy.Name</strong></td>
                            <td>
                                @item.Drug.Name
                                <br />
                                <small class="text-muted">@item.Drug.Manufacturer</small>
                            </td>
                            <td>@item.Drug.Category</td>
                            <td>
                                <span class="badge @(isLowStock ? "bg-warning text-dark" : "bg-success")">
                                    @item.Quantity шт.
                                </span>
                                @if (isLowStock)
                                {
                                    <br />
                                    <small class="text-danger">Поріг: @item.Drug.ReorderLevel</small>
                                }
                            </td>
                            <td class="text-success"><strong>@item.UnitPrice.ToString("F2") грн</strong></td>
                            <td>
                                @if (item.Drug.PrescriptionRequired)
                                {
                                    <span class="badge bg-danger">Rx</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">OTC</span>
                                }
                            </td>
                            <td>
                                @if (item.Quantity == 0)
                                {
                                    <span class="badge bg-danger">Немає в наявності</span>
                                }
                                else if (isLowStock)
                                {
                                    <span class="badge bg-warning text-dark">Низькі залишки</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">В наявності</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад до Dashboard
        </a>
        <a href="@Url.Action("LowStock")" class="btn btn-warning">
            <i class="bi bi-exclamation-triangle"></i> Показати тільки низькі залишки
        </a>
    </div>
</div>
