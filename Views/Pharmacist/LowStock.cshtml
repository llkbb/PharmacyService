@model IEnumerable<PharmacyChain.Models.InventoryItem>

@{
    ViewData["Title"] = "Низькі залишки";
}

<div class="container mt-4">
    <h2><i class="bi bi-exclamation-triangle text-warning"></i> Низькі залишки</h2>
    <p class="text-muted">Препарати, які потребують поповнення</p>

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> Всі препарати в достатній кількості!
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-info-circle"></i> Знайдено <strong>@Model.Count()</strong> препаратів з низькими залишками
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-warning">
                    <tr>
                        <th>Пріоритет</th>
                        <th>Аптека</th>
                        <th>Препарат</th>
                        <th>Залишок</th>
                        <th>Поріг</th>
                        <th>Не вистачає</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>
                    @{int priority = 1;}
                    @foreach (var item in Model)
                    {
                        var shortage = item.Drug.ReorderLevel - item.Quantity;
                        var criticalLevel = item.Quantity == 0;
                        <tr class="@(criticalLevel ? "table-danger" : "")">
                            <td>
                                <span class="badge @(criticalLevel ? "bg-danger" : "bg-warning text-dark")">
                                    @priority
                                </span>
                            </td>
                            <td><strong>@item.Pharmacy.Name</strong></td>
                            <td>
                                @item.Drug.Name
                                <br />
                                <small class="text-muted">@item.Drug.Category</small>
                            </td>
                            <td>
                                <span class="badge @(criticalLevel ? "bg-danger" : "bg-warning text-dark")">
                                    @item.Quantity шт.
                                </span>
                            </td>
                            <td>@item.Drug.ReorderLevel шт.</td>
                            <td>
                                <span class="text-danger"><strong>@shortage шт.</strong></span>
                            </td>
                            <td>
                                @if (criticalLevel)
                                {
                                    <span class="badge bg-danger">КРИТИЧНО</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Низький</span>
                                }
                            </td>
                        </tr>
                        priority++;
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-info mt-3">
            <h6><i class="bi bi-lightbulb"></i> Рекомендації:</h6>
            <ul class="mb-0">
                <li>Повідомте адміністратора про необхідність закупівлі цих препаратів</li>
                <li>Критичні позиції (0 шт.) потребують термінового поповнення</li>
                <li>Для створення замовлення зверніться до адміністратора</li>
            </ul>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад до Dashboard
        </a>
        <a href="@Url.Action("MyInventory")" class="btn btn-primary">
            <i class="bi bi-boxes"></i> Весь склад
        </a>
    </div>
</div>
