@model PharmacyChain.ViewModels.CustomerDashboardViewModel

@{
    ViewData["Title"] = "Головна";
}

<div class="container mt-4">
    <h2><i class="bi bi-hospital"></i> Вітаємо в PharmacyChain!</h2>
    <p class="lead">Ваш надійний партнер у сфері здоров'я</p>

    <div class="row mt-4">
        <!-- Топ 5 препаратів -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-star"></i> Топ 5 препаратів</h5>
                </div>
                <div class="card-body">
                    @if (!Model.TopDrugs.Any())
                    {
                        <p class="text-muted">Немає даних про продажі</p>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Назва препарату</th>
                                    <th>Продано</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int index = 1;}
                                @foreach (var drug in Model.TopDrugs)
                                {
                                    <tr>
                                        <td><strong>@index.</strong></td>
                                        <td>@drug.Name</td>
                                        <td><span class="badge bg-info">@drug.Quantity шт.</span></td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <!-- Низькі залишки -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Низькі залишки</h5>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-3 text-warning">@Model.LowStockCount</h1>
                    <p class="text-muted">препаратів потребують поповнення</p>
                    @if (Model.LowStockCount > 0)
                    {
                        <a href="@Url.Action("Index", "CustomerPortal")" class="btn btn-warning">
                            Переглянути каталог
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Швидкі дії -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-search" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Знайти препарати</h5>
                    <p class="card-text">Пошук серед тисяч найменувань</p>
                    <a href="@Url.Action("Index", "CustomerPortal")" class="btn btn-primary">Каталог</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-hospital" style="font-size: 3rem; color: #198754;"></i>
                    <h5 class="card-title mt-3">Наші аптеки</h5>
                    <p class="card-text">Знайдіть найближчу аптеку</p>
                    <a href="@Url.Action("Pharmacies", "CustomerPortal")" class="btn btn-success">Аптеки</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-clock-history" style="font-size: 3rem; color: #6c757d;"></i>
                    <h5 class="card-title mt-3">Мої замовлення</h5>
                    <p class="card-text">Історія покупок</p>
                    <a href="@Url.Action("MyOrders", "CustomerPortal")" class="btn btn-secondary">Переглянути</a>
                </div>
            </div>
        </div>
    </div>
</div>
