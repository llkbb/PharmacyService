@section Scripts {
    <script>
        // Автоматично закривати alerts через 5 секунд
        document.querySelectorAll('.alert').forEach(alert => {
            setTimeout(() => {
                alert.style.display = 'none';
            }, 5000);
        });
    </script>
}

@if (!string.IsNullOrEmpty(TempData["Success"]?.ToString()))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>? Успіх!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>? Помилка!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
