@using Microsoft.AspNetCore.Identity
@inject SignInManager<PharmacyChain.Models.ApplicationUser> SignInManager
@inject UserManager<PharmacyChain.Models.ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmacyChain</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PharmacyChain.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PharmacyChain</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User") && !User.IsInRole("Admin") && !User.IsInRole("Pharmacist"))
                        {
                            <!-- Клієнтський портал ТІЛЬКИ для User -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="bi bi-cart"></i> Магазин</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="CustomerPortal" asp-action="Index">Каталог препаратів</a></li>
                                    <li><a class="dropdown-item" asp-controller="CustomerPortal" asp-action="Pharmacies">Аптеки</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="CustomerPortal" asp-action="MyOrders">Мої замовлення</a></li>
                                    <li><a class="dropdown-item" asp-controller="CustomerPortal" asp-action="MyPrescriptions">Мої рецепти</a></li>
                                    <li><a class="dropdown-item" asp-controller="CustomerPortal" asp-action="UploadPrescription">Завантажити рецепт</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="CustomerPortal" asp-action="MyProfile">Мій профіль</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Pharmacist"))
                        {
                            <!-- Меню для аптекаря -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-boxes"></i> Склад
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Pharmacist" asp-action="Index">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Pharmacist" asp-action="MyInventory">Переглянути склад</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pharmacist" asp-action="LowStock">Низькі залишки</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="InventoryItems" asp-action="Index">Управління складом</a></li>
                                    <li><a class="dropdown-item" asp-controller="InventoryItems" asp-action="Create">Додати товар</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-cash-coin"></i> Продажі
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Create">Новий продаж</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Index">Історія продажів</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-file-medical"></i> Рецепти
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Pharmacist" asp-action="PendingPrescriptions">Очікують перевірки</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pharmacist" asp-action="ActivePrescriptions">Активні рецепти</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Prescriptions" asp-action="Index">Всі рецепти</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-clipboard-data"></i> Запити
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Queries" asp-action="Index">Всі запити</a></li>
                                    <li><a class="dropdown-item" asp-controller="Queries" asp-action="LowStock">Низькі залишки</a></li>
                                    <li><a class="dropdown-item" asp-controller="Queries" asp-action="RxDrugs">Рецептурні</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Меню аптек -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Аптеки</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Pharmacies" asp-action="Index">Список аптек</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pharmacies" asp-action="Create">Створити аптеку</a></li>
                                </ul>
                            </li>

                            <!-- Препарати -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Препарати</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Drugs" asp-action="Index">Список</a></li>
                                    <li><a class="dropdown-item" asp-controller="Drugs" asp-action="Create">Додати</a></li>
                                </ul>
                            </li>

                            <!-- Постачальники -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Постачальники</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Index">Список</a></li>
                                    <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Create">Додати</a></li>
                                </ul>
                            </li>

                            <!-- Клієнти -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Клієнти</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index">Список</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customers" asp-action="Create">Додати</a></li>
                                </ul>
                            </li>

                            <!-- Співробітники -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Співробітники</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">Список</a></li>
                                    <li><a class="dropdown-item" asp-controller="Employees" asp-action="Create">Додати</a></li>
                                </ul>
                            </li>
                            
                            <!-- Закупівлі та доставка -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Закупівлі</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Index">Замовлення</a></li>
                                    <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Create">Створити</a></li>
                                </ul>
                            </li>

                            <!-- Склад (тільки Admin) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Склад</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="InventoryItems" asp-action="Index">Наявність</a></li>
                                    <li><a class="dropdown-item" asp-controller="InventoryItems" asp-action="Create">Додати</a></li>
                                </ul>
                            </li>

                            <!-- Продажі (тільки Admin) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Продаж</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Index">Список продажів</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sales" asp-action="Create">Створити продаж</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Prescriptions" asp-action="Index">Рецепти</a></li>
                                </ul>
                            </li>
                            
                            <!-- Запити (тільки Admin) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Запити</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Queries" asp-action="Index">Всі запити</a></li>
                                    <li><a class="dropdown-item" asp-controller="Queries" asp-action="LowStock">Низькі залишки</a></li>
                                    <li><a class="dropdown-item" asp-controller="Queries" asp-action="RxDrugs">Рецептурні</a></li>
                                </ul>
                            </li>

                            <!-- Тестування продуктивності -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PerformanceTest" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Продуктивність
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">Вітаю, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Вийти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Вхід</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Alerts" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PharmacyChain - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
