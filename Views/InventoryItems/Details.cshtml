@model PharmacyChain.Models.InventoryItem

@{
    ViewData["Title"] = "Деталі запасу";
}

<h2>Деталі запасу</h2>

<table class="table table-bordered">
    <tr>
        <th>Аптека</th>
        <td>@Model.Pharmacy?.Name</td>
    </tr>
    <tr>
        <th>Препарат</th>
        <td>@Model.Drug?.Name</td>
    </tr>
    <tr>
        <th>Кількість</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Ціна</th>
        <td>@Model.UnitPrice</td>
    </tr>
    <tr>
        <th>Термін придатності</th>
        <td>@Model.ExpirationDate?.ToString("yyyy-MM-dd")</td>
    </tr>
</table>

<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</p>
