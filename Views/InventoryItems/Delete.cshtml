@model PharmacyChain.Models.InventoryItem

@{
    ViewData["Title"] = "Видалити запис";
}

<h2>Видалити запис про запас</h2>

<div class="alert alert-danger">
    Ви справді хочете видалити цей запис?
</div>

<table class="table table-bordered">
    <tr>
        <th>Аптека</th>
        <td>@Model.Pharmacy?.Name</td>
    </tr>
    <tr>
        <th>Препарат</th>
        <td>@Model.Drug?.Name</td>
    </tr>
    <tr>
        <th>Кількість</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Ціна</th>
        <td>@Model.UnitPrice</td>
    </tr>
    <tr>
        <th>Термін придатності</th>
        <td>@(Model.ExpirationDate?.ToString("yyyy-MM-dd") ?? "Не вказано")</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
