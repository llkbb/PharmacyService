@model PharmacyChain.Models.InventoryItem

@{
    ViewData["Title"] = "Редагувати запис";
}

<h2>Редагувати запис</h2>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label">Аптека</label>
        <select asp-for="PharmacyId" class="form-select" asp-items="ViewBag.Pharmacies"></select>
        <span asp-validation-for="PharmacyId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Препарат</label>
        <select asp-for="DrugId" class="form-select" asp-items="ViewBag.Drugs"></select>
        <span asp-validation-for="DrugId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Кількість</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ціна</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Термін придатності</label>
        <input asp-for="ExpirationDate" type="date" class="form-control" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>
