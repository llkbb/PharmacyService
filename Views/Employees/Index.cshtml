@model IEnumerable<PharmacyChain.Models.Employee>

@{
    ViewData["Title"] = "Співробітники";
}

<h2>Співробітники</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Додати співробітника</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ПІБ</th>
            <th>Посада</th>
            <th>Аптека</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Role</td>
                <td>@item.Pharmacy?.Name</td>

                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
