@model PharmacyChain.Models.Employee

@{
    ViewData["Title"] = "Видалити співробітника";
}

<h2>Видалити співробітника</h2>

<div class="alert alert-danger">
    Ви дійсно хочете видалити цього співробітника?
</div>

<table class="table table-bordered">
    <tr>
        <th>ПІБ</th>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <th>Посада</th>
        <td>@Model.Role</td>
    </tr>
    <tr>
        <th>Аптека</th>
        <td>@Model.Pharmacy?.Name</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
