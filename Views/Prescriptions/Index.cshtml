@model IEnumerable<PharmacyChain.Models.Prescription>

@{
    ViewData["Title"] = "Рецепти";
}

<h2>Рецепти</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Створити рецепт</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Клієнт</th>
            <th>Препарат</th>
            <th>Аптека</th>
            <th>Лікар</th>
            <th>Дата видачі</th>
            <th>Дійсний (днів)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer?.FullName</td>
                <td>@item.Drug?.Name</td>
                <td>@item.Pharmacy?.Name</td>
                <td>@item.DoctorName</td>
                <td>@item.DateIssued.ToString("yyyy-MM-dd")</td>
                <td>@item.ValidDays</td>

                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
